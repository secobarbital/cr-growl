{
  "name": "BuzzGrowl for Twitter and Facebook",
  "version": "1.2",
  "description": "Discover and discuss what's hot on any site via Twitter or Facebook as you browse the web.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon_1.png",
    "default_title": "BuzzGrowl"
  },
  "background_page": "background.html",
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["buzzgrowl.js"]
    }
  ],
  "homepage_url": "http://buzzgrowl.com/",
  "permissions": [
    "tabs"
  ]
}
