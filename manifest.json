{
  "name": "BuzzGrowl for Twitter and Facebook",
  "version": "1.3",
  "description": "See what others are saying about the site you're on. Fast and easy way to tweet, retweet and share to Facebook, from any web page.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon_1.png",
    "default_title": "BuzzGrowl"
  },
  "background_page": "background.html",
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["buzzgrowl.js"]
    }
  ],
  "homepage_url": "http://buzzgrowl.com/",
  "permissions": [
    "tabs"
  ]
}
