{
  "name": "BuzzGrowl by Thingbuzz",
  "version": "1.0",
  "description": "Discover and discuss what's hot on any site via Twitter or Facebook.",
  "background_page": "background.html",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon_1.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["buzzgrowl.js"]
    }
  ],
  "permissions": [
    "tabs",
    "http://thingbuzz.com/"
  ]
}
